<div class="row">
    {% for message in app.session.flashbag.get('info-succes') %}
            <div class="alert alert-success fade in flash_message">
                 <button type="button" class="close" data-dismiss="alert">&times;</button>
                 {{ message }}
            </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('info-warning') %}
            <div class="alert alert-warning fade in flash_message">
                 <button type="button" class="close" data-dismiss="alert">&times;</button>
                 {{ message }}
            </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('info-danger') %}
            <div class="alert alert-danger fade in flash_message">
                 <button type="button" class="close" data-dismiss="alert">&times;</button>
                 {{ message }}
            </div>
    {% endfor %}
</div>