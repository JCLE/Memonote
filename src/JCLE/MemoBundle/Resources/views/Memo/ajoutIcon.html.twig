{% block jclememo_body %}

    <div class="row">
        <form method="POST" {{ form_enctype(form) }}  class="form-horizontal well">
            {{ form_errors(form) }}       
            <div class="form-group">
                <label class="col-sm-2 col-lg-2 control-label">{{ form_label(form.fichier) }}</label>
                <div class="col-sm-10 col-lg-10">
                    {{ form_widget(form.fichier, { 'attr': { 'class': 'form-control' } } ) }}
                    {{ form_errors(form.fichier) }}
                </div>
            </div>

{#            {{ form_rest(form) }}#}

            <div class="form-group text-center">
                <label class="control-label">
                    <input class="btn btn-default" type="submit" />
                </label>

                <label>
                    {% set chemin = chemin|default(path('jclememo_accueil')) %}
                    {% if note is defined %} 
                        {% set chemin = path('jclememo_voir', { 'slug' : note.slug } ) %}
                    {% endif %}
                    <a href="{{ chemin }}" >annuler</a>
                </label>

            </div>

            {{ form_end(form) }}
        </form>
    </div>

{% endblock jclememo_body %}